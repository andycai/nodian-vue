{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "nodian",
  "version": "0.1.0",
  "identifier": "com.nodian.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nodian",
        "width": 800,
        "height": 600
        
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["nodian-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
